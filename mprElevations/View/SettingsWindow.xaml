<mps:ModPlusWindow x:Class="mprElevations.View.SettingsWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:local="clr-namespace:mprElevations.View"
                   xmlns:vm="clr-namespace:mprElevations.ViewModels"
                   xmlns:mps="https://modplus.org/winfx/xaml/controls"
                   SizeToContent="Height" Name="Window"
                   d:DataContext="{d:DesignInstance vm:MainContext}" mc:Ignorable="d"
                   Title="SettingsWindow" Width="450">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusStyle;component/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="Lang" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/mprElevations"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="Выбор"
                TextWrapping="Wrap"/>

        <TextBlock 
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="Имя категории"/>

        <Border
            BorderBrush="Black"
            BorderThickness="2"
            Margin="5"
            CornerRadius="5"
            Grid.Row="1"
            Grid.ColumnSpan="3">
            <ListBox 
                Name="list"
                ItemsSource="{Binding CategoryModelList}"
                SelectionMode="Extended">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsChoose}"/>

                            <TextBlock 
                                    Text="{Binding Name}" 
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Width="330"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Button 
            Grid.Row="3"
            Grid.Column="2"
            Content="Отмена" 
            Command="{Binding CancelCommand}" 
            CommandParameter="{Binding ElementName=Window}" Click="Button_Cancel_Click"/>

        <Button 
            Grid.Row="3"
            Grid.Column="0"
            Content="Принять"  
            Command="{Binding ApplyCommand}" 
            CommandParameter="{Binding ElementName=Window}" Click="Button_Apply_Click"/>

        <CheckBox 
            HorizontalAlignment="Center"
            Grid.Row="3"
            Grid.Column="1"
            Content="Выбрать все"
            Command="{Binding SelectAll}"
            CommandParameter="{Binding ElementName=Window}" Checked="CheckBox_Checked"/>

    </Grid>
</mps:ModPlusWindow>
